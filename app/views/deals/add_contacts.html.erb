<div class="container p-5">
    <%= form_for @deal do |f| %>
        <%= f.collection_check_boxes :contact_ids, current_user.contacts.all, :id, :name do |box| %>
            <div class="card card-body mb-3">
                <div class="clearfix">
                    <span class="float-left"><%= box.label %></span>
                    <span class="float-right"><%= box.check_box %></span>
                </div>
            </div>
        <% end %>
        <%= f.submit "Add Contacts", :class=>"btn btn-primary"%>
    <% end %>
</div>