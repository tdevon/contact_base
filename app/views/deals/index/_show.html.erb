<div class="">    
    <div class="row px-3">
        <%= link_to deal do%>
            <h3> <%= deal.title %> </h3>
        <% end %>
    </div>

    <div class="row mt-3 mb-3 px-3">
        <%link_to "Call", deal_url(deal), :class=>"mr-3"%>
        <%=link_to "Email", deal_url(deal), :class=>"mr-3"%>
        <%=link_to "Meet", deal_url(deal), :class=>"mr-3"%>
        <%=link_to "Task", deal_url(deal), :class=>"mr-3"%>
        <%=link_to "Note", deal_url(deal), :class=>"mr-3"%>
    </div>
    <br />

    <div class="mb-5">
        <div class="detail-card row">
            <div class="detail-heading col">Phone</div> 
            <div class="detail-text col">
                <%# deal.phone %>
                data
                <div class="detail-seperator">
                    <hr />
                </div>
            </div>
        </div>
        <div class="detail-card row">
            <div class="detail-heading col">Email</div> 
            <div class="detail-text col">
                <%# deal.email %>
                data
                <div class="detail-seperator">
                    <hr />
                </div>
            </div>
        </div>
        <div class="detail-card row">
            <div class="detail-heading col">Contacts</div> 
            <div class="detail-text col">
                <%# if deal.deal %>
                    <%# link_to deal.deal do %>
                        <%# deal.deal.name %>
                    <%# end %>
                <%# else %>
                    <%# link_to "Add Contacts", add_deal_contacts_url(deal) %></span>
                <%# end %>
                    data
                <div class="detail-seperator">
                    <hr />
                </div>
            </div>
        </div>
        <div class="detail-card row">
            <div class="detail-heading col">Status</div> 
            <div class="detail-text col">
                <%# get_label_text(deal.label)%>
                data
                <div class="detail-seperator">
                    <hr />
                </div>
            </div>
        </div>
        
    </div>

    <div class="row mt-5">
        <div class="col-6">
            <%= link_to "+", new_deal_url, :class=>"deal-info-link" %>
        </div>

        <div class="col-6">
            <%= link_to "Edit", edit_deal_url(deal), :class=>"mr-3 deal-info-link" %>
            <%= link_to "Delete", deal_url(deal), method: :delete, :class=>"deal-info-link"%>
        </div>
    </div>
</div>
