<div class="container">
    <h3> Edit Deal </h3>
    <hr />
    <%= form_for @deal do |f| %>
        <%= f.text_field :title, :class=>"form form-control", :placeholder=>"Title" %>
        <br />
        <%= f.text_area :description, :class=>"form form-control", :placeholder=>"Description" %>
        <br />
        <%= f.submit "Save", :class=>"btn btn-primary"%>
    <% end %>
</div>