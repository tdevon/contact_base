<div class="container p-5">
    <h3> Deal</h3>
    <hr />

    <p class="lead"><%= @deal.title%></p>
    <p> <%= @deal.description %></p>
    
    <br />
    <h5>Contacts</h5>
    <% @deal.contacts.each do |contact|%>
        <%= link_to contact do%>
            <p><%= contact.name%></p>
         <% end %>
    <% end %>

    <h5>Company</h5>
    <% if @company %>
        <%= link_to @company do%>
            <p><%= @company.name%></p>
        <% end %>
    <% end %>

    <div class="clearfix mt-5">
        <span class="float-left"><%= link_to "Edit", edit_deal_url(@deal), :class=>"text-secondary"%></span>
        <span class="float-left ml-3"><%= link_to "Delete", deal_url(@deal), method: :delete, :class=>"text-secondary" %></span>
    </div>
</div>