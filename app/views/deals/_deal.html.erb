<div class="my-2 deal-link" id="<%=deal.id%>">
        <span id="<%=deal.id%>"> 
            <%= link_to deal do %>
                <%= deal.title %>
            <% end %>
            <% if deal.company %>
                <small id="<%=deal.id%>" class="ml-2 text-secondary"><%= deal.company.name %></small>
            <%end%>
        </span>
</div>