<div class="container">
    <div class="clearfix">
        <div class="float-left">
            <h3> Pipelines </h3>
        </div>
        <div class="float-right">
            <%= link_to "New Pipeline", new_pipeline_url %>
        </div>
    </div>
    <hr />
</div>

<div class="container">
    <% @pipelines.each do |pipe| %>
        <div class="card card-body mb-3">
            <div class="clearfix">
                <span class="float-left"><%= pipe.title %></span>
                <span class="float-right"><%= link_to "View", pipeline_url(pipe)%></span>
            </div>
        </div>
    <% end %>
</div>