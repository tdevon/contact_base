<div class="container p-5">
    <%= form_for @pipeline do |f| %>
        <%= f.collection_check_boxes :deal_ids, current_user.deals.all, :id, :title do |box| %>
            <div class="card card-body mb-3">
                <div class="clearfix">
                    <span class="float-left"><%= box.label %></span>
                    <span class="float-right"><%= box.check_box%></span>
                </div>
            </div>
        <% end %>
        
        <%= f.submit "Save", :class=>"btn btn-primary"%>
    <% end %>
</div>