<div class="container">
    <div class="clearfix">
        <div class="float-left">
            <h3> Contacts </h3>
        </div>
        <div class="float-right">
            <%= link_to "New Contact", new_contact_url %>
        </div>
    </div>
    <hr />
</div>

<div class="container">
    <% @contacts.each do |contact| %>
        <div class="card card-body mb-3">
            <div class="clearfix">
                <span class="float-left"><%= contact.name %></span>
                <span class="float-right"><%= link_to "View", contact_url(contact)%></span>
            </div>
        </div>
    <% end %>
</div>