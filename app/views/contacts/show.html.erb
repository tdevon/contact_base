<div class="container mb-5">
    <div class="row">
        <div class="col-lg-4">
            <h3> <%= @contact.name %> </h3>
            <br/>
            <div>
                <div class="clearfix">
                    <div class="float-left">
                        phone
                    </div>
                    <div class="float-right">
                        <%= @contact.phone %>
                    </div>
                </div><hr />

                <div class="clearfix">
                    <div class="float-left">
                        email
                    </div>
                    <div class="float-right">
                        <%= @contact.email %>
                    </div>
                </div><hr />

                <div class="clearfix">
                    <%= link_to "Touchpoints", contact_touchpoints_url(@contact), :class => "float-right ml-3" %>
                </div>
                <br/>
            </div>  
        </div>

        <div class="col-lg-8"> 
        </div> 
    </div> 
</div>    

    <!-- LINKS -->
    <div class="container">
        <%= link_to "Edit", edit_contact_url(@contact), :class=>"mr-3 text-secondary" %>
        <%= link_to "Delete", contact_url(@contact), method: :delete, :class=>"text-secondary"%>
        
    </div>
</div>