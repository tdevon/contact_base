<div id="top-contact-info" class="container">   
    <div id="contact-header">
        <h3> <%= contact.name %> </h3>
        <span class="badge badge-primary"><%= get_label_text(contact.label)%></span>
    </div>

    <br />

    <div id="contact-details" class="contact-details-container mb-5">
        <span class="row contact-details">
            <span class="contact-details-heading col-2">
                phone
            </span>
            <span class="contact-details-text col-10">
                <%= contact.phone %>
            </span>
        </span>

        <hr />

        <div class="contact-details row">
            <span class="contact-details-heading col-2">
                email
            </span>
            <span class="contact-details-heading col-10">
                <%= contact.email %>
            </span>
        </div>

        <hr />

        <div class="contact-details row">
            <span class="contact-details-heading col-2">
                company
            </span>
            <span class="contact-details-heading col-10">
                <% if contact.company %>
                    <%= link_to contact.company do %>
                        <span><%= contact.company.name %></span>
                    <% end %>
                <% else %>
                    <span><%= link_to "Add Company", add_contact_company_url(contact), :class=>"text-secondary contact-details-text" %></span>
                <% end %>
            </span>
        </div>
        
    </div>
</div>