<!DOCTYPE html>
<html>
  <head>
    <title>ContactBase</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="main">
      <div id="top">
          <%= render 'shared/navbar.html.erb'%>
      </div>
      <div id="side">
          <%= render 'shared/sidebar.html.erb'%>
      </div>

      <div id="content">
        <% if content_for? :page_links %>
          <style>
            #content{
              margin-left:12em;
            }
          </style>
        <% else %>
          <style>
            #content{
              margin-left:0em;
              width: 100vw;
            }
            #side{
              display:none;
            }
          </style>
        <% end %>
          <%= yield %>
      </div>
    </div>
  </body>
</html>

